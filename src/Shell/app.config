<?xml version="1.0"?>
<configuration>
    <configSections>
      <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    </configSections>
    <nlog autoReload="true">
      <targets>
        <target name="debug" type="OutputDebugString" layout="${date:format=HH\:mm\:ss}|${level}|${stacktrace}|${message}" />
        <target name="file" type="File" fileName="${basedir}/Data/rrLog.log" layout="${date}: ${message}" />
      </targets>
      <rules>
        <logger name="*" minlevel="debug" writeTo="debug" />
        <logger name="*" minlevel="info" writeTo="file" />
      </rules>
    </nlog>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
    </startup>
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <probing privatePath="Bin;Plugins"/>
        </assemblyBinding>
    </runtime>
</configuration>
